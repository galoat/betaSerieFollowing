<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools">
  <TextView
    android:id="@+id/saison"
    android:layout_width="26dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    app:layout_constraintEnd_toStartOf="@+id/textView"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="63dp"
    tools:text="1"/>

  <TextView
    android:id="@+id/textView"
    android:layout_width="29dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    app:layout_constraintEnd_toStartOf="@+id/episode"
    tools:layout_editor_absoluteY="62dp"
    tools:text="E"/>
  <TextView
    android:id="@+id/episode"
    android:layout_width="29dp"
    android:layout_height="wrap_content"
    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
    tools:layout_editor_absoluteX="88dp"
    tools:layout_editor_absoluteY="62dp"
    tools:text="2"/>

  <ImageView
    android:id="@+id/seen"
    android:layout_width="85dp"
    android:layout_height="87dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="56dp"
    android:layout_gravity="right"
    android:contentDescription="TODO"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:src="@drawable/ic_check_circle_black_24dp"/>
  <ImageView
    android:id="@+id/download"
    android:layout_width="86dp"
    android:layout_height="90dp"
    android:layout_marginBottom="32dp"
    android:layout_marginEnd="44dp"
    android:layout_gravity="right"
    android:contentDescription="TODO"
    app:layout_constraintBottom_toTopOf="@+id/titleSerie"
    app:layout_constraintEnd_toStartOf="@+id/seen"
    tools:src="@drawable/ic_file_download_black_24dp"/>

  <TextView
    android:id="@+id/titleSerie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="139dp"
    tools:text="Game Of throne"/>


  <TextView
    android:id="@+id/titleEpisode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    app:layout_constraintTop_toBottomOf="@+id/titleSerie"
    tools:layout_editor_absoluteX="60dp"
    tools:text="Les noce pourpres"/>

</android.support.constraint.ConstraintLayout>